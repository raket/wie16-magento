<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.jpg</argument>
            </arguments>
        </referenceBlock>
    </body>
    <referenceContainer name="head">
        <block class="Magento\Theme\Block\Html\Head\Css" name="css-name">
            <arguments>
                <argument name="file" xsi:type="string">css/styles.css</argument>
            </arguments>
        </block>
    </referenceContainer>
</page>
